{
  "version": 2,
  "builds": [
    {
      "src": "web-backend/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "web-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "web-backend/src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "web-frontend/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
